<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/lay_matiere_new_no"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="right"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/lay_matiere_new_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Oracle (Gestionnaire de base de donnee)"
            android:paddingLeft="10dp"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/lay_matiere_new_coef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/lay_matiere_new_btnModifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modifier"
            android:textColor="@color/white"
            android:background="@drawable/cor_small_blue"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/lay_matiere_new_btnRetirer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retirer"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/cor_small_blue"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>


</LinearLayout>

