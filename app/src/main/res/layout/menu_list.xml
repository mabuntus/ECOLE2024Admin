<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_centerInParent="true"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:gravity="center"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_matiere_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="liste matiere"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/menu_matiere_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nouvelle matiere"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_eleve_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="liste eleve"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/menu_eleve_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nouveau eleve"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="note eleve"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>


                        <TextView
                            android:id="@+id/menu_statistique"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="note statistique"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_moy_annuelle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bulletin annuelle"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/menu_bulletin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bulletin se/trimestre"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_synchro_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="partager"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/menu_synchro_receiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="synchroniser"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_exported"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="exporter"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/menu_imported"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="importer"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_ecole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ecole"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            />
                    </LinearLayout>


                    <!-- apropos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menu_apropos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="concepteur"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/cor_small_blue"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

