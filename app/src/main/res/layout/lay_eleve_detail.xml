<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_marginLeft="60dp">

    <ImageView
        android:id="@+id/lay_eleve_new_detail_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/profile_white_foreground"
        android:adjustViewBounds="true"
        android:background="@color/black"
        android:layout_margin="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lay_eleve_new_detail_lieuN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symbaya Ecole"
                android:textColor="@color/gray_dark"
                android:padding="2dp" />

            <TextView
                android:id="@+id/lay_eleve_new_detail_dateN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/12/2000"
                android:textColor="@color/gray_dark"
                android:padding="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


